  <modelVersion>4.0.0</modelVersion>
  <groupId>it.unibo.tecweb</groupId>
  <artifactId>03_tecweb_maven</artifactId>
  <packaging>war</packaging>
  <version>0.0.1-SNAPSHOT</version>
  <name>helloworld-app Maven Webapp</name>
  <url>http://maven.apache.org</url>
  <properties>
  	<maven.compiler.source>19</maven.compiler.source> <!-- Java version -->
  	<maven.compiler.target>19</maven.compiler.target> <!-- Java version -->
  	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  	<tomcat.server>C:\MY_PROGRAMS\apache-tomcat\apache-tomcat-9.0.22</tomcat.server> <!-- Aggiornare -->
  </properties>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
      <version>4.0.1</version>  <!-- The one used by Tomcat 9x -->
      <scope>provided</scope>   <!-- will not be included in the war -->
    </dependency>
  </dependencies>
  <build>
    <finalName>tecweb-3</finalName>
    <plugins>
	  <plugin>
		  <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>3.13.0</version>
      </plugin>
      <plugin>
           <groupId>org.apache.maven.plugins</groupId>
           <artifactId>maven-war-plugin</artifactId>
           <version>3.4.0</version>
      </plugin>
	  <!-- CONFIGURATION to start TOMCAT in EXISTING mode -->
	  <plugin>
	    <groupId>org.codehaus.cargo</groupId>
  	    <artifactId>cargo-maven3-plugin</artifactId>
        <version>1.10.10</version>
  	    <configuration>
          <container>
            <containerId>tomcat9x</containerId>
            <type>installed</type>
            <log>${project.build.directory}/cargo.log</log>
            <logLevel>debug</logLevel>
            <home>${tomcat.server}</home>
          </container>
          <configuration>
			<type>existing</type>
            <home>${tomcat.server}</home>
            <properties>
			  <cargo.host>localhost</cargo.host>
              <cargo.servlet.port>8080</cargo.servlet.port>
              <cargo.logging>high</cargo.logging>
            </properties>
          </configuration>
          <deployables>
            <deployable>
              <location>${project.build.directory}/${project.build.finalName}.${project.packaging}</location>
              <type>war</type>
            </deployable>
          </deployables>
         </configuration>
	  </plugin>
